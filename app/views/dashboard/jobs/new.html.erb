<div class="container">
  <div class="row">
    <div class="col-lg-6 col-lg-offset-3">
      <h1 class="text-center">Jobs details</h1>
      <%= simple_form_for @job ,:url => dashboard_jobs_path, :method => :post do |f| %>
      <%= f.input :title %>
      <%= f.input :content %>
      <%= f.input :skill_id, collection: Skill.all %>
      <%= f.input :start_time %>
      <%= f.input :end_time %>
      <%= f.input :address %>
      <%= f.button :submit, 'Post your job', class: 'btn btn-primary btn-xl pull-right' %>
      <br>
      <br>
      <br>
      <% end %>
    </div>
  </div>
</div>
