
  <div class="profil-infos">
    <div class="jobs-panel">
      <div style="margin: 30px">
        <div class="text-center">
          <H1>Hello <%= @user.first_name %> <%= @user.last_name %> !</H1>
          <h2> Profile Informations </h2>
        </div>
        <div>
            <ul>
              <li><strong>User_type :</strong> <%= @user.user_type %></li>
              <li><strong>Title :</strong> <%= @user.title %></li>
              <li><strong>Bio :</strong> <%= @user.bio %></li>
              <li><strong>CV :</strong> <%= @user.cv %></li>
              <li><strong>Company :</strong> <%= @user.company %></li>
              <li><strong>Website :</strong> <%= @user.website %></li>
            </ul>
        </div>
        <div class="text-center">
          <%= button_to "Edit Profile", edit_dashboard_user_path(current_user), class: "btn-controle btn btn-primary active", :method => :get %>
        </div>
      </div>
    </div>
  </div>

