<div class="container">

  <% if @job.start_time > DateTime.now-1 %>

    <H1><%= @job.title %></H1>
    <p><%= @job.content %></p>

    <ul>
      <li><%= @job.start_time %></li>
      <li><%= @job.end_time %></li>
      <li><%= @job.address %></li>
      <li><%= @job.user.company %></li>
    </ul>
    <%= image_tag "https://maps.googleapis.com/maps/api/staticmap?zoom=12&size=300x200&sensor=false&maptype=roadmap&markers=color:red|#{@job.address}" %>

    <%= link_to 'back to index', jobs_path %>
    <br>


    <% if @already_apply %>
    <br>
    <p>You already apply</p>
    <% else %>
    <%= button_to "Apply", job_applications_path(@job), class: "btn btn-primary btn-lg" %>
    <% end %>
  <% else %>
    <h1>The jobs is expired... Sorry :( </h1>
  <% end %>

</div>
