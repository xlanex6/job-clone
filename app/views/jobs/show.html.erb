<div class="container">

  <% if @job.start_time > DateTime.now-1 %>

    <H1><%= @job.title %></H1>
    <p><%= @job.content %></p>

    <ul>
      <li><%= @job.start_time %></li>
      <li><%= @job.end_time %></li>
      <li><%= @job.address %></li>
      <li><%= @job.user.company %></li>
    </ul>

    <%= button_to "Back to index", jobs_path, class: "btn btn-success active", :method => :get %>

    <% if @already_apply %>
    <br>
    <p>You already apply</p>
    <% else %>
    <%= button_to "Apply to this job", job_applications_path(@job), class: "btn btn-primary active" %>
    <% end %>
  <% else %>
    <h1>The jobs is expired... Sorry :( </h1>
  <% end %>

</div>
