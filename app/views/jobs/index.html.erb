<% @jobs.each do |job| %>
<% if job.start_time > DateTime.now-1 %>
    <%= link_to job.title, job_path(job)%> <br>
    <%= job.content %>
    <ul>
      <li><%= job.start_time %></li>
      <li><%= job.end_time %></li>
      <li><%= job.address %></li>
      <li>by <%= job.user.company %></li>
    </ul>
    <% else %>
  <% end %>
<% end %>
